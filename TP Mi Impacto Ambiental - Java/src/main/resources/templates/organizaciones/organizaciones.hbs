{{#partial "contenidoNav" }}
    <a href="/organizaciones" class="nav-link-custom" style="margin: 0px 10px;" id="organizaciones">
        Organizaciones
    </a >

    <a href="/trayectos" class="nav-link-custom" style="margin: 0px 10px;" id="trayectos">
        Trayectos
    </a >
    <div class="dropdown">
        <button class="nav-drop-custom"   data-bs-toggle="dropdown"  aria-expanded="false"id="miPerfil">
            Mi perfil
        </button>
        <ul class="dropdown-menu dropdown-menu-sm-start drop-menu-custom"  >
            <li id="drop1"><a class="drop-item-custom"  href="/perfil">Mis datos</a></li>
            <li id="drop1"><a class="drop-item-custom"  href="/solicitudes">Solicitudes</a></li>
            <form  method="POST" action="/logout" novalidate>
                <li id="drop1"><button class="drop-item-custom"  type="submit" style="background: none;color: inherit;	border: none;padding: 0;cursor: pointer; outline: inherit;" >Cerrar sesion</button></li>
            </form>
        </ul>
    </div>
{{/partial}}

{{#partial "contenido" }}

    <div class="d-flex flex-column" id="content-wrap">
        <div class=" d-flex align-self-center conteinerRegistro">
            <main>
                <div class="row" style="margin:1vmax 1vmax 1vmax 1vmax;">

                    <ul class="list-group" id="boxTrayectos">
                        {{#each solicitudes}}
                            <form method="POST" action="/organizaciones/desvincularse/" onsubmit="return confirm('Realmente deseas desvincularte de {{ area.organizacion.razonSocial }} - {{ area.nombre }}?')">
                                <input name="solicitud" value="{{id}}" type="hidden">
                            <li class="list-group-item d-flex justify-content-between align-items-start align-middle texto" >
                            <div class="ms-2 me-auto">
                                <p  class="listStyle" >{{ area.organizacion.razonSocial }} - {{ area.nombre }} </p>
                            </div>

                            <button class="material-symbols-outlined delete"style="background: none;color: inherit;	border: none;padding: 0;cursor: pointer; outline: inherit;"  type="submit">delete</button>
                            </form>
                    </li>
                    {{/each}}

                </ul>

                <div class="d-flex justify-content-center">
                    <a class="btn btn-custom" href="/organizaciones/vincularse" style="margin-top:20px ;">Vincularme a una organizacion</a>
                </div>
            </div>
        </main>
    </div>
</div>

{{/partial}}
{{> base.hbs }}